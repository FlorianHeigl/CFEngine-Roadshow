bundle agent resolv_conf {

 files:
  "/etc/resolv.conf"
  comment                   => "Domain resolv.conf door g.class_domain",
  create                    => "true",
  perms                     => mo("644","root"),
  action                    => u_immediate,
  edit_line                 => edit_resolv_conf;

}

bundle edit_line edit_resolv_conf {
delete_lines:

    ".*";

insert_lines:
search ${g.class_domain}
nameserver ${g.nameserver};

}
