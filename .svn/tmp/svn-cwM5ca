bundle agent etc_hosts {

files:
  "/etc/hosts"
  comment                   => "/etc/hosts voor elke host",
  create                    => "true",
  perms                     => mo("644","root"),
  edit_line                 => edit_etc_hosts,
  action                    => u_immediate;

methods:

}

bundle edit_line edit_etc_hosts {

 delete_lines:

    ".*";

 insert_lines:

"s Webhuis /etc/hosts voor de roadshow
#
# Do not edit
#
127.0.0.1       localhost

10.68.71.7      inuc-01.webhuis.nl inuc-01
10.68.71.8      ips-roadshow.webhuis.nl ips-roadshow
10.68.71.7      dell-lat.webhuis.nl dell-lat
10.68.71.10     cfe-roadshow.webhuis.nl cfe-roadshow
10.68.71.11     apt-roadshow.webhuis.nl apt-roadshow
10.68.71.12     nfs-roadshow.webhuis.nl nfs-roadshow
10.68.71.14     webapp1.webhuis.nl webapp1
10.68.71.15     webapp2.webhuis.nl webapp2
10.68.71.181    mirror.webhuis.nl mirror

# The following lines are desirable for IPv6 capable hosts
::1     localhost ip6-localhost ip6-loopback
ff02::1 ip6-allnodes
ff02::2 ip6-allrouters";

}
